</head>

<body>
    <div class="pedidos__main">
        <div class="pedidos__container">
            <h1>Pedidos a realizar para el d√≠a de hoy</h1>

            <div class="pedidos__wrapper">
                <% listaDePedidos.forEach(pedido=> { %>
                    <div class="pedidos__">
                        <li>
                            <%= pedido.username %>
                        </li>
                        <li>
                            <%= pedido.phone %>
                        </li>
                        <li>
                            <%= pedido.direccion %>
                        </li>
                        <li>
                            <%= pedido.barrio %>
                        </li>
                        <li>
                            <%= pedido.hour %>
                        </li>
                        <li>
                            <%= pedido.minutes %>
                        </li>
                        <li>
                            <%= pedido.cart %>
                        </li>

                    </div>

                    <% }) %>
            </div>

            <div class="pedidos__wrapper2">

            </div>
        </div>
    </div>



    <script src="../dist/js/pedidos.js"></script>

</body>

</html>